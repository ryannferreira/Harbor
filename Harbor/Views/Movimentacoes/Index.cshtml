@model IEnumerable<Harbor.Models.MovimentacoesModel>

@{
    ViewData["Title"] = "Movimentações";
}

<br />
<h1 class="text-center">Movimentações</h1>

<p>
    <a type="button" class="btn btn-secondary float-start" asp-action="Relatorio">Visualizar relatório</a>
    <a type="button" class="btn btn-primary float-end" asp-action="Create">Nova movimentação</a>
</p>

<br />
<br />
<table class="table table-striped" id="table-search">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdContainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroContainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMovimentacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataTermino)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td width="100px">
                @Html.DisplayFor(modelItem => item.Container.IdContainer)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.NumeroContainer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMovimentacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTermino)
            </td>
            <td>
                <a type="button" class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.IdMovimentacao">Editar</a>
                    <a type="button" class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.IdMovimentacao">Detalhes</a>
                    <a type="button" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdMovimentacao">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
