        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdContainer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Container.IdContainer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroContainer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroContainer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Container.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Container.Categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMovimentacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoMovimentacao)
        </dd>
        <dt class = "col-sm-2">
